<Window x:Class="TP3_2019_2020.Windows_And_Dialogs.Produit.AjoutProduit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP3_2019_2020.Windows_And_Dialogs.Produit"
        mc:Ignorable="d"
        Title="Ajout Produit" Height="450" Width="1300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            
            
            <Grid Grid.Column="0" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                

                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Name="MotCLé" HorizontalAlignment="Left" >
                    <Label Content="Mot-clé / titre :       ---" Margin="40,0,10,0"  Height="30" Width="354"/>
                    <Button x:Name="ConfigMot" Height="30" Width="140" Margin="0,0,0,0"  
                        Content="Configurer mot-clé"  
                        Click="ConfigMot_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Name="Fournisseur" HorizontalAlignment="Left">
                    <Label Content="Fourniseur : " Margin="40,0,30,0"  Height="30" Width="auto"/>
                    <TextBox Width="250" x:Name ="FournisseurBox" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Name="PrixAchat" HorizontalAlignment="Left">
                    <Label Content="Prix d'achat : " Margin="40,0,26,0"  Height="30" Width="auto"/>
                    <TextBox Width="250" x:Name ="AchatBox" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Orientation="Horizontal" Name="PrixVente" HorizontalAlignment="Left">
                    <Label Content="Prix de vente : " Margin="40,0,18,0" Height="30" Width="auto"/>
                    <TextBox Width="250" x:Name ="VenteBox" Height="30"/>
                </StackPanel>

            </Grid>

            <StackPanel Grid.Column="1" Orientation="Vertical" Name="ListCollectionType1" HorizontalAlignment="Stretch">
                <Label Content="Collections spécifiques :  "   Height="30" Width="auto"/>
                <ListBox x:Name="ListBoxCollection1"  Height="auto" Margin="10,0,5,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                </ListBox>

            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Vertical" Name="ListCollectionType2" HorizontalAlignment="Stretch">
                <Label Content="Collections par courant :  "   Height="30" Width="auto"/>
                <ListBox x:Name="ListBoxCollection2"  Height="auto" Margin="5,0,5,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                </ListBox>
            </StackPanel>

            <StackPanel Grid.Column="3" Orientation="Vertical" Name="ListCollectionType3" HorizontalAlignment="Stretch">
                <Label Content="Collections par origine :  "   Height="30" Width="auto"/>
                <ListBox x:Name="ListBoxCollection3"  Height="auto" Margin="5,0,10,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                </ListBox>
            </StackPanel>



        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Name="ToolBox" HorizontalAlignment="Center">
            <Button x:Name="Ok" Grid.Row="3"  Width="200" Height="40" Margin="0,20,0,20"
               Content="Enregistrer et fermer"  
               VerticalAlignment="Top"  
               HorizontalAlignment="Center"
                Click="Ok_Click">
            </Button>

            <Button x:Name="Suivant" Grid.Row="3"  Width="200" Height="40" Margin="20,20,20,20"
               Content="Enregistrer (produit suivant)"  
               VerticalAlignment="Top"  
               HorizontalAlignment="Center"
                Click="Suivant_Click">
            </Button>

            <Button x:Name="Annuler" Grid.Row="3"  Width="200" Height="40" Margin="0,20,0,20"
               Content="Annuler"  
               VerticalAlignment="Top"  
               HorizontalAlignment="Center"
                Click="Annuler_Click">
            </Button>

        </StackPanel>

    </Grid>
</Window>
